<div class="min-h-full flex item-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <div>
      <h1 class="mt-6 text-center text-3xl font-bold text-gray-700">Activate Account</h1>
      <p class="mt-4 text-center">Create Your Password to activate yor account</p>
    </div>
    <div>
      {% form 'activate_customer_password'
        , class: 'space-y-4'
        , id: 'activate_account_form' %}
        {% if form.errors %}
          <div class="relative border border-red-700 bg-red-700 text-red-700 px-4 py-3" role="alert">
            <strong class="font-bold">Error!</strong>
          </div>
          <span class="block sm:inline">{{ form.errors | default_errors }}</span>
        {% endif %}
        <div>
          <label for="password">Password</label>
          <input
            type="password"
            name="customer[password]"
            id="password"
            placeholder="New Password"
            class="relative block w-full px-3 py-3 border placeholder-gray-300 text-gray-700"
            autocomplete="new-password">

        </div>
        <div>
          <label for="confirm_password">Confirm   Your Password</label>
          <input
            type="password"
            name="customer[password_confirmation]"
            id="confirm_password"
            placeholder="Confirm Your Password"
            class="relative block w-full px-3 py-3 border placeholder-gray-300 text-gray-700"
            autocomplete="new-password">

        </div>
        <div class="block md:flex">
          <button type="submit" class="w-full py-2 px-4 border text-sm font-medium text-white bg-gray-700 hover:bg-gray-900">Activate Account</button>
          <button
            name="decline"
            type="submit"
            class="w-full py-2 px-4 border text-sm font-medium text-gray-700 bg-white hover:bg-gray-700 hover:text-white">Decline Invitation</button>
        </div>
      {% endform %}
    </div>
  </div>
</div>